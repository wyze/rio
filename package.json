{
  "name": "@wyze/rio",
  "version": "1.2.0",
  "description": "A utility to compile Node modules.",
  "license": "MIT",
  "repository": "wyze/rio",
  "author": {
    "name": "Neil Kistner",
    "email": "neil.kistner@gmail.com",
    "url": "neilkistner.com"
  },
  "bin": {
    "rio": "bin/index.js"
  },
  "scripts": {
    "build": "rollup -c rollup.config.ts",
    "clean": "rimraf bin/*.js",
    "postbuild": "shx chmod a+x bin/index.js",
    "prebuild": "yarn clean",
    "prettier": "prettier --write \"{bin,src}/**/*.ts\" \"rollup.config.js\"",
    "preversion": "yarn build",
    "test": "jest",
    "version": "write-changelog"
  },
  "files": [
    "bin/index.js"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "builtins": "^2.0.0",
    "meow": "^5.0.0",
    "rollup": "^0.66.6",
    "rollup-plugin-bucklescript": "^0.7.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-sucrase": "^2.0.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.5",
    "@types/meow": "^5.0.0",
    "jest": "^23.6.0",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "shx": "^0.3.2",
    "ts-jest": "^23.10.4",
    "typescript": "^3.1.3",
    "write-changelog": "^1.2.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/src/*.ts"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
