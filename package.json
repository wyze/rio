{
  "name": "@wyze/rio",
  "version": "1.2.0",
  "description": "A utility to compile Node modules.",
  "license": "MIT",
  "repository": "wyze/rio",
  "author": {
    "name": "Neil Kistner",
    "email": "neil.kistner@gmail.com",
    "url": "https://neilkistner.com"
  },
  "bin": {
    "rio": "bin/index.js"
  },
  "scripts": {
    "build": "rollup -c rollup.config.ts",
    "clean": "rimraf bin/*.js",
    "lint": "eslint \"{bin,src}/**/*.ts\" \"rollup.config.ts\"",
    "postbuild": "shx chmod a+x bin/index.js",
    "prebuild": "yarn clean",
    "prettier": "prettier --write \"{bin,src}/**/*.ts\" \"rollup.config.ts\"",
    "preversion": "run-p lint type-check test build",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "version": "write-changelog"
  },
  "files": [
    "bin/index.js"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "builtins": "^2.0.0",
    "meow": "^5.0.0",
    "rollup": "^0.66.6",
    "rollup-plugin-bucklescript": "^0.7.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-sucrase": "^2.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-typescript": "^7.9.0",
    "@types/jest": "^25.1.4",
    "@types/meow": "^5.0.0",
    "@types/node": "^13.9.5",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-wyze": "^3.4.0",
    "jest": "^25.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "shx": "^0.3.2",
    "typescript": "^3.8.3",
    "write-changelog": "^1.2.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/typescript"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "prettier": {
    "arrowParens": "always",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
